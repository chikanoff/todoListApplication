<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                   http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet id="312331" author="chikanoff">
        <createTable tableName="todoItems">
            <column name="id" type="bigInt">
                <constraints primaryKey="true"/>
            </column>
            <column name="userId" type="bigInt">
                <constraints foreignKeyName="fk_user_todoItem" references="users(id)"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="isDone" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="todoItems"  columnDataType="bigInt" columnName="id" startWith="1" incrementBy="1" />
    </changeSet>
</databaseChangeLog>
